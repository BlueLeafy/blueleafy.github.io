{
    "compilerOptions": {
      "jsx": "react-jsx", // Enables the new JSX transform
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "target": "ES2020",
      "outDir": "./dist",
      "rootDir": "./src",
      "types": ["vite/client"]
    },
    "include": ["src/**/*"]
  }